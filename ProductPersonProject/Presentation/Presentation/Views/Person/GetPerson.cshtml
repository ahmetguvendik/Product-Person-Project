@using Application.ViewModels
@model IQueryable<VM_Person_Product>

<table class="mt-4 table table-hover">
    <thead>
        <tr>
            <th>Name</th>
            <th>Surname</th>
            <th>Info</th>
            <th>Product</th>    
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <th>@item.Name</th>
                <th>@item.Surname</th>
                <th>@item.Info</th>
                <th>@item.ProductName</th>
                <th><a asp-action="RemovePerson" asp-controller="Person" asp-route-id=@item.Id>Sil</a></th>
            </tr>
        }

    </tbody>

</table>
